<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Categories - Admin</title>
    <link rel="shortcut icon" sizes="16x16" href="/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar fade-in">
      <h2 class="logo">SmartCanteen Admin</h2>
      <a href="/admin/orders">Orders</a>
      <a href="/admin/categories">Categories</a>
      <a href="/">Home</a>
      <a href="/admin/logout" style="margin-left:auto;">Logout</a>
    </nav>

    <div class="container">
      <h1 class="title slide-up">Manage Categories</h1>

      <!-- Error Message -->
      <% if (error) { %>
        <p style="color:red; text-align:center; margin-bottom:1rem;"><%= error %></p>
      <% } %>

      <div class="order-box fade-in">
        <form action="/admin/addCategory" method="POST">
          <input
            type="text"
            name="category_name"
            placeholder="New Category Name"
            required
          />
          <button type="submit" class="btn big">Add Category</button>
        </form>
      </div>

      <div class="card-container admin">
        <% categories.forEach(cat => { %>
          <div class="card fade-in">
            <h3><%= cat.category_name %></h3>
            <form action="/admin/deleteCategory" method="POST" style="margin-top:1rem;">
              <input type="hidden" name="category_id" value="<%= cat.category_id %>" />
              <button type="submit" class="btn">Delete</button>
            </form>
          </div>
        <% }) %>
      </div>

      <!-- Back to Home -->
      <a href="/" class="back-home">← Back to Home</a>
    </div>

    <footer class="footer fade-in">
      <div class="container">
        <div class="footer-content">
          <div class="footer-left">
            <h3>SmartCanteen</h3>
            <p>Delicious food delivered right to your table!</p>
          </div>
          <div class="footer-center">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/menu">Menu</a></li>
              <li><a href="/admin/orders">Admin</a></li>
            </ul>
          </div>
          <div class="footer-right">
            <h4>Contact Us</h4>
            <p>Email: info@smartcanteen.com</p>
            <p>Phone: +92 324 9740759</p>
            <p>Made By: Mubeen Khan</p>
          </div>
        </div>
        <p class="footer-bottom">
          © <%= new Date().getFullYear() %> SmartCanteen. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
