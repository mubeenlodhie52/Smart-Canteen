<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Orders</title>
  <link rel="shortcut icon" sizes="16x16" href="/icon.png" type="image/x-icon">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    /* Orders Table Styling */
    .orders-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 2rem;
    }

    .orders-table th, .orders-table td {
      padding: 0.8rem 1rem;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .orders-table th {
      background: #ff6347;
      color: #fff;
    }

    .order-items {
      list-style: none;
      padding-left: 0;
      margin: 0;
    }

    .order-items li {
      margin-bottom: 0.3rem;
    }

    @media (max-width: 768px) {
      .orders-table, .orders-table thead, .orders-table tbody, .orders-table th, .orders-table td, .orders-table tr {
        display: block;
      }

      .orders-table th {
        display: none;
      }

      .orders-table td {
        position: relative;
        padding-left: 50%;
        margin-bottom: 1rem;
      }

      .orders-table td::before {
        content: attr(data-label);
        position: absolute;
        left: 1rem;
        font-weight: bold;
      }
    }

    .back-home {
      margin-top: 2rem;
      display: inline-block;
      background: #333;
      color: #fff;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      text-decoration: none;
    }

    .error-message {
      color: red;
      text-align: center;
      margin-top: 1rem;
    }
  </style>
</head>
<body>
  <nav class="navbar fade-in">
    <h2 class="logo">SmartCanteen Admin</h2>
    <a href="/admin/addItem">Edit Items</a>
    <a href="/admin/categories">Categories</a>
    <a href="/">Home</a>
    <a href="/admin/logout" style="margin-left:auto;">Logout</a>
  </nav>

  <div class="container">
    <h1 class="title slide-up">All Orders</h1>

    <!-- Error message -->
    <% if (error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>

    <% if (orders.length === 0) { %>
      <p style="text-align:center; margin-top:2rem;">No orders yet.</p>
    <% } else { %>
      <table class="orders-table fade-in">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Contact Number</th>
            <th>Items</th>
            <th>Total (Rs)</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td data-label="Order ID"><%= order.order_id %></td>
              <td data-label="Customer"><%= order.name %></td>
              <td data-label="Contact Number"><%= order.phone_number %></td>
              <td data-label="Items">
                <ul class="order-items">
                  <% order.items.forEach(i => { %>
                    <li><%= i.item_name %> × <%= i.quantity %></li>
                  <% }) %>
                </ul>
              </td>
              <td data-label="Total">Rs<%= order.total_amount %></td>
              <td data-label="Date"><%= new Date(order.order_date).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <a href="/" class="back-home">← Back to Home</a>
  </div>

  <footer class="footer fade-in">
    <div class="container">
      <div class="footer-content">
        <div class="footer-left">
          <h3>SmartCanteen</h3>
          <p>Delicious food delivered right to your table!</p>
        </div>
        <div class="footer-center">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/menu">Menu</a></li>
            <li><a href="/admin/addItem">Admin</a></li>
          </ul>
        </div>
        <div class="footer-right">
          <h4>Contact Us</h4>
          <p>Email: info@smartcanteen.com</p>
          <p>Phone: +92 324 9740759</p>
          <p>Made By: Mubeen Khan</p>
        </div>
      </div>
      <p class="footer-bottom">© <%= new Date().getFullYear() %> SmartCanteen. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
