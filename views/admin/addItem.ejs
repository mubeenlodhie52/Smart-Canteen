<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Menu Item - Admin</title>
    <link rel="shortcut icon" sizes="16x16" href="/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar fade-in">
      <h2 class="logo">SmartCanteen Admin</h2>
      <a href="/admin/orders">Orders</a>
      <a href="/admin/categories">Categories</a>
      <a href="/">Home</a>
      <a href="/admin/logout" style="margin-left:auto;">Logout</a>
    </nav>

    <div class="container">
      <h1 class="title slide-up">Add New Menu Item</h1>

      <!-- Error Message -->
      <% if (error) { %>
        <p style="color:red; text-align:center; margin-bottom:1rem;"><%= error %></p>
      <% } %>

      <div class="order-box fade-in">
        <form action="/admin/addItem" method="POST">
          <input type="text" name="item_name" placeholder="Item Name" required />
          <input type="text" name="description" placeholder="Description" required />
          <input type="number" step="0.01" name="price" placeholder="Price (Rs)" required />
          <select name="category_id" required>
            <option value="">Select Category</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat.category_id %>"><%= cat.category_name %></option>
            <% }) %>
          </select>
          <input type="text" id="image_url" name="image_url" placeholder="Image URL" required />

          <!-- Image Preview -->
          <div style="margin: 1rem 0">
            <img id="preview" src="" alt="Image Preview" style="max-width: 200px; border-radius: 8px; display: none" />
          </div>

          <button type="submit" class="btn big">Add Item</button>
        </form>
      </div>

      <!-- Existing Items with Delete -->
      <h2 class="title slide-up" style="margin-top:3rem;">Existing Menu Items</h2>
      <div class="card-container admin">
        <% items.forEach(item => { %>
          <div class="card fade-in">
            <img src="<%= item.image_url %>" alt="<%= item.item_name %>" />
            <h3><%= item.item_name %></h3>
            <p>Rs <%= item.price %></p>
            <p><%= item.description %></p>
            <form action="/admin/deleteItem" method="POST" style="margin-top:1rem;">
              <input type="hidden" name="item_id" value="<%= item.item_id %>" />
              <button type="submit" class="delBtn">Delete</button>
            </form>
          </div>
        <% }) %>
      </div>

      <!-- Back to Home -->
      <a href="/" class="back-home">← Back to Home</a>
    </div>

    <footer class="footer fade-in">
      <div class="container">
        <div class="footer-content">
          <div class="footer-left">
            <h3>SmartCanteen</h3>
            <p>Delicious food delivered right to your table!</p>
          </div>
          <div class="footer-center">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/menu">Menu</a></li>
              <li><a href="/admin/orders">Admin</a></li>
            </ul>
          </div>
          <div class="footer-right">
            <h4>Contact Us</h4>
            <p>Email: info@smartcanteen.com</p>
            <p>Phone: +92 324 9740759</p>
            <p>Made By: Mubeen Khan</p>
          </div>
        </div>
        <p class="footer-bottom">© <%= new Date().getFullYear() %> SmartCanteen. All rights reserved.</p>
      </div>
    </footer>

    <script>
      const imageInput = document.getElementById("image_url");
      const preview = document.getElementById("preview");

      imageInput.addEventListener("input", () => {
        const url = imageInput.value.trim();
        if (url) {
          preview.src = url;
          preview.style.display = "block";
        } else {
          preview.src = "";
          preview.style.display = "none";
        }
      });
    </script>
  </body>
</html>
