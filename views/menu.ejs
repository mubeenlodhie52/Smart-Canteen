<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Menu - SmartCanteen</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .card-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .card {
      background: #fff;
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card img {
      width: 100%;
      max-height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }

    .card h3 {
      margin: 0.5rem 0;
    }

    .card p {
      margin: 0.3rem 0;
    }

    .btn {
      background: #ff6347;
      color: #fff;
      border: none;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 0.5rem;
    }

    .btn:hover {
      background: #e5533d;
    }

    .category {
      margin-top: 2rem;
      font-size: 1.6rem;
      color: #ff6347;
    }

    @media (max-width: 768px) {
      .card-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>

<nav class="navbar fade-in">
  <h2 class="logo">SmartCanteen</h2>
  <a href="/">Home</a>
  <a href="/menu">Menu</a>
  <a href="/admin/orders">Admin</a>
</nav>

<div class="container">
  <h1 class="title slide-up">Our Menu</h1>

  <% if (categories.length === 0 || items.length === 0) { %>
    <p style="text-align:center; margin-top:2rem;">No menu items available.</p>
  <% } else { %>
    <% categories.forEach(cat => { %>
      <h2 class="category slide-up"><%= cat.category_name %></h2>
      <div class="card-container fade-in">
        <% items.filter(i => i.category_id === cat.category_id).forEach(item => { %>
          <div class="card fade-in">
            <img src="<%= item.image_url %>" alt="<%= item.item_name %>">
            <h3><%= item.item_name %></h3>
            <p><%= item.description %></p>
            <p>Rs <%= item.price %></p>
            <form action="/order" method="POST">
              <input type="hidden" name="item_id" value="<%= item.item_id %>">
              <button type="submit" class="btn">Order Now</button>
            </form>
          </div>
        <% }) %>
      </div>
    <% }) %>
  <% } %>
</div>

<!-- Footer -->
<footer class="footer fade-in">
  <div class="container">
    <div class="footer-content">
      <div class="footer-left">
        <h3>SmartCanteen</h3>
        <p>Delicious food delivered right to your table!</p>
      </div>
      <div class="footer-center">
        <h4>Quick Links</h4>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/menu">Menu</a></li>
          <li><a href="/admin/orders">Admin</a></li>
        </ul>
      </div>
      <div class="footer-right">
        <h4>Contact Us</h4>
        <p>Email: info@smartcanteen.com</p>
        <p>Phone: +92 324 9740759</p>
        <p>Made By: Mubeen Khan</p>
      </div>
    </div>
    <p class="footer-bottom">Â© <%= new Date().getFullYear() %> SmartCanteen. All rights reserved.</p>
  </div>
</footer>

<script src="/js/script.js"></script>
</body>
</html>
